<resources>

    <style name="Theme.EDS" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <!--主题色-->
        <item name="colorPrimary">#673ab7</item>
        <item name="colorPrimaryVariant">#212121</item>
        <!-- button 等控件默认文字颜色-->
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Secondary brand color. -->
        <!-- switch radio checkbox 等控件的颜色-->
        <item name="colorSecondary">#673ab7</item>
        <item name="colorSecondaryVariant">#ff018786</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:windowBackground">@android:color/black</item>
        <!-- Custom styles -->
        <item name="android:actionModeBackground">?android:colorAccent</item>
        <item name="actionBarTheme">@style/MyActionBar</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <!--标题栏样式-->
    <style name="MyActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">#673ab7</item>
        <item name="colorAccent">?android:colorPrimary</item>
        <item name="android:background">@android:color/black</item>
        <item name="colorPrimaryVariant">#212121</item>

        <!--标题栏弹出菜单背景-->
        <item name="popupMenuBackground">@drawable/popupmenu_background_night</item>
        <!--弹出菜单样式-->
        <item name="android:dropDownListViewStyle">@style/PopupMenuDivider</item>

    </style>

    <style name="PopupMenuDivider">
        <!--弹出菜单分隔符-->
        <item name="android:divider">#212121</item>
        <item name="android:dividerHeight">0.5dp</item>
    </style>
</resources>
